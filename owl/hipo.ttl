# baseURI: https://codata.org/ont/hip
# imports: http://purl.org/dc/terms/
# imports: http://www.w3.org/2004/02/skos/core
# imports: http://www.w3.org/ns/dcat
# imports: http://xmlns.com/foaf/0.1/
# prefix: hipo

@prefix dcat: <http://www.w3.org/ns/dcat#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix hipo: <https://codata.org/ont/hip#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://codata.org/ont/hip>
  a owl:Ontology ;
  dcterms:created "2020-09-13"^^xsd:date ;
  dcterms:creator <https://orcid.org/0000-0002-3884-3420> ;
  dcterms:description "OWL ontology for encoding of Hazard Information Profiles developed by ISC/UNDRR Working Group on Hazard Terminology - a profile of SKOS" ;
  dcterms:modified "2022-02-09"^^xsd:date ;
  owl:imports dcterms: ;
  owl:imports <http://www.w3.org/2004/02/skos/core> ;
  owl:imports <http://www.w3.org/ns/dcat> ;
  owl:imports foaf: ;
.
hipo:Cluster
  a owl:Class ;
  rdfs:label "Hazard cluster" ;
  rdfs:subClassOf skos:Concept ;
  rdfs:subClassOf [
      a owl:Restriction ;
      owl:minQualifiedCardinality "1"^^xsd:nonNegativeInteger ;
      owl:onClass hipo:HIP ;
      owl:onProperty skos:narrower ;
    ] ;
.
hipo:HIP
  a owl:Class ;
  rdfs:label "Hazard information profile" ;
  rdfs:subClassOf skos:Concept ;
  rdfs:subClassOf [
      a owl:Restriction ;
      owl:cardinality "1"^^xsd:nonNegativeInteger ;
      owl:onProperty dcterms:source ;
    ] ;
  rdfs:subClassOf [
      a owl:Restriction ;
      owl:cardinality "1"^^xsd:nonNegativeInteger ;
      owl:onProperty skos:definition ;
    ] ;
  rdfs:subClassOf [
      a owl:Restriction ;
      owl:minCardinality "0"^^xsd:nonNegativeInteger ;
      owl:onProperty skos:altLabel ;
    ] ;
  rdfs:subClassOf [
      a owl:Restriction ;
      owl:minCardinality "1"^^xsd:nonNegativeInteger ;
      owl:onProperty dcterms:modified ;
    ] ;
  rdfs:subClassOf [
      a owl:Restriction ;
      owl:minCardinality "1"^^xsd:nonNegativeInteger ;
      owl:onProperty skos:prefLabel ;
    ] ;
  rdfs:subClassOf [
      a owl:Restriction ;
      owl:minCardinality "1"^^xsd:nonNegativeInteger ;
      owl:onProperty hipo:coordinator ;
    ] ;
  rdfs:subClassOf [
      a owl:Restriction ;
      owl:minQualifiedCardinality "1"^^xsd:nonNegativeInteger ;
      owl:onClass hipo:Cluster ;
      owl:onProperty skos:broader ;
    ] ;
.
hipo:Provenance
  a owl:Class ;
  rdfs:label "Provenance and version information" ;
  rdfs:subClassOf dcterms:ProvenanceStatement ;
  rdfs:subClassOf [
      a owl:Restriction ;
      owl:maxCardinality "1"^^xsd:nonNegativeInteger ;
      owl:onProperty skos:editorialNote ;
    ] ;
  rdfs:subClassOf [
      a owl:Restriction ;
      owl:minCardinality "0"^^xsd:nonNegativeInteger ;
      owl:onProperty dcat:contactPoint ;
    ] ;
  rdfs:subClassOf [
      a owl:Restriction ;
      owl:minCardinality "1"^^xsd:nonNegativeInteger ;
      owl:onProperty dcterms:creator ;
    ] ;
  rdfs:subClassOf [
      a owl:Restriction ;
      owl:minCardinality "1"^^xsd:nonNegativeInteger ;
      owl:onProperty owl:versionInfo ;
    ] ;
  rdfs:subClassOf [
      a owl:Restriction ;
      owl:onClass hipo:HIP ;
      owl:onProperty foaf:primaryTopic ;
      owl:qualifiedCardinality "1"^^xsd:nonNegativeInteger ;
    ] ;
.
hipo:Type
  a owl:Class ;
  rdfs:label "Hazard type" ;
  rdfs:subClassOf skos:Collection ;
  rdfs:subClassOf [
      a owl:Restriction ;
      owl:allValuesFrom hipo:HIP ;
      owl:onProperty skos:member ;
    ] ;
.
hipo:additional-description
  a owl:AnnotationProperty ;
  rdfs:domain hipo:HIP ;
  rdfs:label "Additional scientific description" ;
  rdfs:subPropertyOf skos:note ;
.
hipo:convention-treaty
  a owl:AnnotationProperty ;
  rdfs:domain hipo:HIP ;
  rdfs:label "Key relevant UN convention/multilateral treaty" ;
  rdfs:subPropertyOf rdfs:seeAlso ;
.
hipo:coordinator
  a rdf:Property ;
  a owl:AnnotationProperty ;
  rdfs:domain hipo:HIP ;
  rdfs:label "Coordinating Agency or Organisation" ;
  rdfs:subPropertyOf dcterms:contributor ;
.
hipo:drivers-outcomes-risk-management
  a owl:AnnotationProperty ;
  rdfs:domain hipo:HIP ;
  rdfs:label "Examples of drivers, outcomes and risk management" ;
  rdfs:subPropertyOf skos:note ;
.
hipo:inCluster
  a owl:ObjectProperty ;
  rdfs:domain hipo:HIP ;
  rdfs:label "HIP Cluster" ;
  rdfs:range hipo:Cluster ;
  rdfs:subPropertyOf skos:broader ;
.
hipo:inType
  a owl:ObjectProperty ;
  rdfs:domain hipo:HIP ;
  rdfs:label "HIP Type" ;
  rdfs:range hipo:Type ;
  rdfs:subPropertyOf dcterms:type ;
  rdfs:subPropertyOf [
      owl:inverseOf skos:member ;
    ] ;
.
hipo:metrics
  a owl:AnnotationProperty ;
  rdfs:domain hipo:HIP ;
  rdfs:label "Metrics and numeric limits" ;
  rdfs:subPropertyOf skos:note ;
.
